<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#222222</item>
        <item name="colorPrimaryVariant">#333333</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="android:textSize">30sp</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">#333333</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoteActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteActivity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteActivity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="courseTitle" parent="@android:style/TextAppearance.Material.Medium" >
        <item name="android:textColor" >@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="addFab" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_baseline_add_circle_24</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>